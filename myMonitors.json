{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "metadata": {
        "description": "Azure location for deployment"
      }
    },
    "resourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The resource group where the monitored resources are"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Machine name"
      }
    },
    "storageAccount1": {
      "type": "string",
      "metadata": {
        "description": "First Storage Account name"
      }
    },
    "storageAccount2": {
      "type": "string",
      "metadata": {
        "description": "Second Storage Account name"
      }
    },
    "adminEmail": {
      "type": "string",
      "metadata": {
        "description": "Email for alert notifications"
      }
    },
    "dashboardName": {
      "type": "string",
      "defaultValue": "MonitoringDashboard",
      "metadata": {
        "description": "Name of the shared dashboard"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Portal/dashboards",
      "apiVersion": "2015-08-01-preview",
      "name": "[parameters('dashboardName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/metricAlerts', 'vmCpuHighAlert')]",
        "[resourceId('Microsoft.Insights/metricAlerts', 'storageCapacityAlert1')]",
        "[resourceId('Microsoft.Insights/metricAlerts', 'storageCapacityAlert2')]"
      ],
      "properties": {
        "lenses": {
          "0": {
            "order": 0,
            "parts": {
              "0": { 
                "position": { "x": 0, "y": 0, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.compute/virtualmachines" },
                    { "name": "resourceId", "value": "[resourceId(parameters('resourceGroup'), 'Microsoft.Compute/virtualMachines', parameters('vmName'))]" },
                    { "name": "metric", "value": "Percentage CPU" }
                  ],
                  "type": "Microsoft.Portal/Charts"
                }
              },
              "1": {
                "position": { "x": 6, "y": 0, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.storage/storageaccounts" },
                    { "name": "resourceId", "value": "[resourceId(parameters('resourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccount1'))]" },
                    { "name": "metric", "value": "UsedCapacity" }
                  ],
                  "type": "Microsoft.Portal/Charts"
                }
              },
              "2": {
                "position": { "x": 0, "y": 4, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.storage/storageaccounts" },
                    { "name": "resourceId", "value": "[resourceId(parameters('resourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccount2'))]" },
                    { "name": "metric", "value": "UsedCapacity" }
                  ],
                  "type": "Microsoft.Portal/Charts"
                }
              },
              "3": {
                "position": { "x": 6, "y": 4, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.insights/metricalerts" },
                    { "name": "resourceId", "value": "[resourceId('Microsoft.Insights/metricAlerts', 'vmCpuHighAlert')]" }
                  ],
                  "type": "Microsoft.Portal/AlertsSummary"
                }
              },
              "4": {
                "position": { "x": 0, "y": 8, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.insights/metricalerts" },
                    { "name": "resourceId", "value": "[resourceId('Microsoft.Insights/metricAlerts', 'storageCapacityAlert1')]" }
                  ],
                  "type": "Microsoft.Portal/AlertsSummary"
                }
              },
              "5": {
                "position": { "x": 6, "y": 8, "colSpan": 6, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.insights/metricalerts" },
                    { "name": "resourceId", "value": "[resourceId('Microsoft.Insights/metricAlerts', 'storageCapacityAlert2')]" }
                  ],
                  "type": "Microsoft.Portal/AlertsSummary"
                }
              },
              "6": {
                "position": { "x": 0, "y": 12, "colSpan": 12, "rowSpan": 4 },
                "metadata": {
                  "inputs": [
                    { "name": "resourceType", "value": "microsoft.insights/metricalerts" }
                  ],
                  "type": "Microsoft.Portal/AlertsSummary"
                }
              }
            }
          }
        },
        "metadata": {
          "model": {
            "timeRange": {
              "value": "Past24Hours",
              "type": "MsPortalFx.Composition.Configuration.ValueTypes.TimeRange"
            },
            "filter": {
              "value": {
                "filters": [],
                "version": 1
              },
              "type": "MsPortalFx.Composition.Configuration.ValueTypes.ListPane"
            },
            "sharedTimeRange": true
          }
        }
      }
    },
    {
      "type": "Microsoft.Insights/actionGroups",
      "apiVersion": "2023-01-01",
      "name": "monitoringActionGroup",
      "location": "[parameters('location')]",
      "properties": {
        "groupShortName": "AlertsGrp",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "AdminNotification",
            "emailAddress": "[parameters('adminEmail')]",
            "useCommonAlertSchema": true
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "vmCpuHighAlert",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
      ],
      "properties": {
        "description": "Alert for high CPU usage on the virtual machine.",
        "severity": 3,
        "enabled": true,
        "evaluationFrequency": "PT5M",
        "windowSize": "PT1H",
        "scopes": [
          "[resourceId(parameters('resourceGroup'), 'Microsoft.Compute/virtualMachines', parameters('vmName'))]"
        ],
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "High CPU Usage",
              "metricNamespace": "Microsoft.Compute/virtualMachines",
              "metricName": "Percentage CPU",
              "dimensions": [],
              "operator": "GreaterThan",
              "threshold": 80,
              "timeAggregation": "Average",
              "failingPeriods": {
                "numberOfEvaluationPeriods": 3,
                "minFailingPeriodsToAlert": 2
              }
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
          }
        ],
        "autoMitigate": false
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "storageCapacityAlert1",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
      ],
      "properties": {
        "description": "Alert when storage utilization exceeds 500GB on Storage Account 1.",
        "severity": 3,
        "enabled": true,
        "evaluationFrequency": "PT5M",
        "windowSize": "PT1H",
        "scopes": [
          "[resourceId(parameters('resourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccount1'))]"
        ],
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "High Storage Utilization",
              "metricNamespace": "Microsoft.Storage/storageAccounts",
              "metricName": "UsedCapacity",
              "dimensions": [],
              "operator": "GreaterThan",
              "threshold": 500000000000,
              "timeAggregation": "Average",
              "failingPeriods": {
                "numberOfEvaluationPeriods": 3,
                "minFailingPeriodsToAlert": 2
              }
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
          }
        ],
        "autoMitigate": false
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "storageCapacityAlert2",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
      ],
      "properties": {
        "description": "Alert when storage utilization exceeds 500GB on Storage Account 2.",
        "severity": 3,
        "enabled": true,
        "evaluationFrequency": "PT5M",
        "windowSize": "PT1H",
        "scopes": [
          "[resourceId(parameters('resourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccount2'))]"
        ],
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "High Storage Utilization",
              "metricNamespace": "Microsoft.Storage/storageAccounts",
              "metricName": "UsedCapacity",
              "dimensions": [],
              "operator": "GreaterThan",
              "threshold": 500000000000,
              "timeAggregation": "Average",
              "failingPeriods": {
                "numberOfEvaluationPeriods": 3,
                "minFailingPeriodsToAlert": 2
              }
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', 'monitoringActionGroup')]"
          }
        ],
        "autoMitigate": false
      }
    }
  ]
}
